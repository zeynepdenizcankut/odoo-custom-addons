<odoo>
    <record id="view_employee_building_assignment_form" model="ir.ui.view">
        <field name="name">Employee Building Assignment Form</field>
        <field name="model">employee.building.assignment</field>
        <field name="arch" type="xml">
            <form string="Company">

                <sheet>,
                    <group>
                        <field name="employee_id"/>
                        <field name="building_id"/>
                        <field name="assignment_start_date"/>
                        <field name="assignment_end_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_employee_building_assignment_tree" model="ir.ui.view">
        <field name="name">Employee Building Assignment List</field>
        <field name="model">employee.building.assignment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="building_id"/>
                <field name="assignment_start_date"/>
                <field name="assignment_end_date"/>
            </tree>
        </field>
    </record>
</odoo>